  .row
    .col-md-12.col-xs-6
      .tile.tile-vertical.blue-theme
        include _social

    .col-md-12.col-xs-6
      .tile.tile-vertical.gray-theme
        include _donate

  .tile.tile-vertical.red-theme
    include _sisters

