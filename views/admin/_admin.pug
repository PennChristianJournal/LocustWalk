
block append head
  link(rel='stylesheet' href='/css/admin/main.css')

block nav
  nav.navbar.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar-collapse' aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar

        a.navbar-brand(href='/admin') 
          img(src='/img/logo-horizontal.svg')
          h1.strong(style='display: none') Locust<span class='thin'>Walk Admin</span>

      .collapse.navbar-collapse#navbar-collapse
        ul.nav.navbar-nav.clean
          li: a(href='/admin/articles') Articles
          
        ul.nav.navbar-nav.navbar-right.clean
          li
            a(href='/admin/logout') Log Out

block prepend content
  if error && error.length > 0
    .messages(style="margin-top: 62px")
      for err in error
        .alert.alert-danger(role='alert') #{err}